<Page
    x:Class="TaskManagementCleanArchitecture.View.UserControls.CreateNewUserPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TaskManagementCleanArchitecture.View.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Loaded="Page_Loaded">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///ResourseDictionary/StylesDictionary"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid Background="{ThemeResource AppBackground}">
        <Grid x:Name="UserDataGrid"
              Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <!--<Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>-->
            <Grid Grid.Row="0"
                   HorizontalAlignment="Center">
                <TextBlock Text="User Details"
                           FontSize="18"
                           FontWeight="Bold"
                           HorizontalTextAlignment="Center"
                           Grid.ColumnSpan="2"/>
            </Grid>
            <Grid Grid.Row ="1"
                  HorizontalAlignment="Center"
                  Margin="20"
                  Width="450"
                  VerticalAlignment="Center"
                  BorderThickness="0.5">
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal"
                            Margin="30,0,0,0">
                        <TextBlock HorizontalAlignment="Center"
                       x:Name="UserNameDetail"
                       Margin="10">
                <Run Text="User Name"/>
                <Run Text="*"
                     Foreground="Red"/>
                        </TextBlock>
                        <TextBox x:Name="UserNameEnter"
                     Style="{ThemeResource InputFieldTextBox}"
                     HorizontalAlignment="Stretch"
                     Width="400">
                        </TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                            Margin="30,20,0,0">
                        <TextBlock HorizontalAlignment="Center"
                       x:Name="UserEmailDetail"
                       Margin="10">
                <Run Text="User Email"/>
                <Run Text="*"
                     Foreground="Red"/>
                        </TextBlock>
                        <TextBox x:Name="UserEmailEnter"
                     Style="{ThemeResource InputFieldTextBox}"
                     HorizontalAlignment="Stretch"
                     Width="400">
                        </TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                            Margin="30,20,0,0">
                        <TextBlock HorizontalAlignment="Center"
                       x:Name="UserRoleDetail"
                       Margin="10">
                <Run Text="User Role"/>
                <Run Text="*"
                     Foreground="Red"/>
                        </TextBlock>
                        <ComboBox 
                  PlaceholderText="Choose Role"
                  HorizontalAlignment="Stretch"
                  x:Name="UserRoleEnter"
                  SelectionChanged="UserRoleEnter_SelectionChanged"
                  Margin="5">
                            <x:String>Employee</x:String>
                            <x:String>Manager</x:String>
                            <x:String>Admin</x:String>
                        </ComboBox>

                    </StackPanel>
                </StackPanel>
            </Grid>
            <TextBlock Text="{x:Bind _createUser.ResponseString,Mode=OneWay}"
                       Visibility="{x:Bind _createUser.ResponseStringVisibility,Mode=OneWay}"
                       Foreground="Red"
                       FontSize="14"
                       Grid.Row="2"
                       HorizontalAlignment="Center"
                       x:Name="ErrorMessage"
                       VerticalAlignment="Center"
                       Style="{ThemeResource BasicTextBlock}"/>
            <Button x:Name="AddUserButton"
                    Content="Add User"
                    Grid.Row="3"
                    Margin="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Style="{StaticResource AccentButtonStyle}"
                    Click="AddUserButton_Click"/>

            <Grid Grid.Row="4"
                  HorizontalAlignment="Center"
                  x:Name="CredentialsGrid"
                  Visibility="{x:Bind _createUser.CredentialsGridVisibility,Mode=OneWay}"
                  Background="{ThemeResource AppForegroundBg}"
                     
                  CornerRadius="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0"
                      HorizontalAlignment="Center"
                      Margin="25">
                    <RelativePanel>
                        <TextBlock Text="New User Credentials"
                               FontSize="18"
                           FontWeight="Bold"
                           HorizontalTextAlignment="Center"
                               x:Name="TitleBox"
                           VerticalAlignment="Center"
                               Margin="0,0,0,0"/>
                        <Button FontFamily="Segoe MDL2 Assets"
                            Margin="0,0,10,0"
                            Background="Transparent"
                            BorderThickness="0"
                            Content="&#xE106;"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            RelativePanel.RightOf="TitleBox"
                            Name="CloseButton"
                            FontSize="10"
                            ToolTipService.ToolTip="Close"
                            Click="CloseButton_Click"/>
                    </RelativePanel>
                </Grid>
                <Grid Grid.Row="1"
                      HorizontalAlignment="Center">
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal"
                            Margin="30,0,0,0">
                            <TextBlock HorizontalAlignment="Center"
                                x:Name="UserIdDetail"
                                Margin="10"
                                Text="User Id :">
                            </TextBlock>
                            <TextBlock x:Name="UserIdEnter"
                                   Style="{ThemeResource InputFieldTextBlock}"
                                   HorizontalAlignment="Center"
                                   Width="400"
                                   VerticalAlignment="Center"
                                   Text="{x:Bind _createUser.UserId,Mode=OneWay}">
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                            Margin="30,10,0,50">
                            <TextBlock HorizontalAlignment="Center"
                                        x:Name="PasswordDetail"
                                        Margin="10"
                                       Text="Password :"/>
                            <TextBlock x:Name="PasswordEnter"
                                   Style="{ThemeResource InputFieldTextBlock}"
                                   HorizontalAlignment="Center"
                                   Width="400"
                                   VerticalAlignment="Center"
                                   Text="{x:Bind _createUser.Password,Mode=OneWay}">
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Grid>

            </Grid>
        </Grid>
    </Grid>
</Page>
