    <Grid CornerRadius="10"
          Background="{ThemeResource AppForegroundBg}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <RelativePanel Margin="0,0,0,20"
                       Grid.ColumnSpan="2">
            <TextBlock Text="Projects"
                       Margin="50,10,0,0"
                       FontSize="24"
                       FontWeight="SemiBold"
                       RelativePanel.AlignLeftWithPanel="True"/>
            <Button x:Name="NewProjectButton"
                    Content="New Project"
                    CornerRadius="5"
                    Margin="0,0,10,0"
                    Padding="7"
                    Style="{StaticResource AccentButtonStyle}"
                    RelativePanel.AlignRightWithPanel="True"
                    RelativePanel.AlignHorizontalCenterWithPanel="True"
                    RelativePanel.AlignVerticalCenterWithPanel="True"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Click="NewProjectButton_Click"/>
        </RelativePanel>
        <Grid Grid.Row="1"
              CornerRadius="10"
              x:Name="ProjectsListGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition  MinWidth="400" MaxWidth="520" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <controls:DataGrid x:Name="ProjectsList"
                       ItemsSource="{x:Bind _projectsPageViewModel.ProjectsList}"
                       AutoGenerateColumns="True"
                       GridLinesVisibility="Horizontal"
                       FrozenColumnCount="2"
                       SelectionChanged="ProjectsList_SelectionChanged"
                       ScrollViewer.HorizontalScrollMode="Enabled"
                       ScrollViewer.VerticalScrollMode="Enabled"
                       ScrollViewer.HorizontalScrollBarVisibility="Visible"
                       ScrollViewer.VerticalScrollBarVisibility="Visible"
                       AutoGeneratingColumn="ProjectsList_AutoGeneratingColumn"
                       IsReadOnly="True"
                       MinColumnWidth="200"
                       Grid.ColumnSpan="2"
                       SelectionMode="Single"
                       Background="{ThemeResource AppForegroundBg}">
            <!--<controls:DataGrid.Columns>
            <controls:DataGridTextColumn Header="First Name" 
            Width="SizeToHeader"
            Binding="{Binding Id}" 
            FontSize="20" />-->
        <!--</controls:DataGrid.Columns>-->
            <controls:DataGrid.ColumnHeaderStyle>
                    <Style TargetType="controlsprimitives:DataGridColumnHeader">
                        <Setter Property="Height" Value="30"/>
                        <Setter Property="Background" Value="LightBlue"/>
                        <Setter Property="Foreground" Value="#000000"/>
                        <Setter Property="FontSize" Value="15" />
                        <Setter Property="Height" Value="20"/>
                        <Setter Property="SeparatorVisibility" Value="Collapsed"/>
                    </Style>
                </controls:DataGrid.ColumnHeaderStyle>
        </controls:DataGrid>

            <Grid x:Name="AddProjectForm"
              Visibility="Collapsed"
              Grid.Column="1"
                  BorderBrush="#cfd6df"
                  BorderThickness="1">
                <Grid>
                <local:CreateNewProjectPage x:Name="CreateProjectForm"/>
                </Grid>
                <StackPanel Grid.Row="7"
                    Orientation="Horizontal"
                    Margin="5">
                    <Button x:Name="AddButton"
                    Style="{StaticResource AccentButtonStyle}"
                    Content="Add"
                    Click="AddButton_Click"
                    Margin="0,0,10,0"/>
                    <Button x:Name="CancelButton"
                    Style="{StaticResource AccentButtonStyle}"
                    Content="Cancel"
                    Click="CancelButton_Click"/>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="2"
              Visibility="Collapsed"
                  x:Name="taskofaproject">
                <Grid>
                    <local:TasksPage />
                </Grid>

            </Grid>
        </Grid>
        
    </Grid>
